rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Meta (e.g. seed flag): allow read/write when signed in
    match /meta/{document=**} {
      allow read, write: if request.auth != null;
    }
    // Home data: anyone can read (for app content), only authenticated can write (for seed)
    match /banners/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /popular_dishes/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /categories/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /restaurants/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
